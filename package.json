{
	"name": "todos",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"format:write": "prettier --config prettier.config.js \"**/*.{js,ts,jsx,tsx,json}\" --write --cache",
		"format:check": "prettier --config prettier.config.js \"**/*.{js,ts,jsx,tsx,json}\" --check --cache",
		"clean": "pnpm run format:write && pnpm run lint:fix",
		"prepare": "husky",
		"release": "release-it",
		"postinstall": "is-ci || (pnpm run prepare && pnpm run clean)"
	},
	"dependencies": {
		"@heroicons/react": "^2.1.3",
		"@radix-ui/react-checkbox": "^1.0.4",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-scroll-area": "^1.0.5",
		"@radix-ui/react-separator": "^1.0.3",
		"@radix-ui/react-slot": "^1.0.2",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"husky": "^9.0.11",
		"lucide-react": "^0.378.0",
		"next": "14.2.3",
		"next-themes": "^0.3.0",
		"react": "^18",
		"react-dom": "^18",
		"tailwind-merge": "^2.3.0",
		"tailwindcss-animate": "^1.0.7",
		"vaul": "^0.9.1"
	},
	"devDependencies": {
		"eslint": "^8",
		"eslint-config-next": "14.2.3",
		"postcss": "^8",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"tailwindcss": "^3.4.1"
	},
	"lint-staged": {
		"**/*.{js,ts,jsx,tsx,json}": "prettier --config prettier.config.js --write --ignore-unknown"
	}
}
